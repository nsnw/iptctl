#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1

%:
	dh $@ 

override_dh_install:
	mkdir -pv ${CURDIR}/debian/iptctl/usr/bin
	mkdir -pv ${CURDIR}/debian/iptctl/etc/netfilter
	mkdir -pv ${CURDIR}/debian/iptctl/etc/network/if-up.d
	mkdir -pv ${CURDIR}/debian/iptctl/etc/init.d
	mkdir -pv ${CURDIR}/debian/iptctl/etc/init
	cp ${CURDIR}/../../iptctl ${CURDIR}/debian/iptctl/usr/bin
	cp ${CURDIR}/../scripts/iptables.if-up.d ${CURDIR}/debian/iptctl/etc/network/if-up.d/iptables
	cp ${CURDIR}/../scripts/ip6tables.if-up.d ${CURDIR}/debian/iptctl/etc/network/if-up.d/ip6tables
	cp ${CURDIR}/../scripts/iptables.conf.init ${CURDIR}/debian/iptctl/etc/init/iptables.conf
	cp ${CURDIR}/../scripts/ip6tables.conf.init ${CURDIR}/debian/iptctl/etc/init/ip6tables.conf
	cd ${CURDIR}/debian/iptctl/etc/init.d && ln -s ../../usr/bin/iptctl iptables
	cd ${CURDIR}/debian/iptctl/etc/init.d && ln -s ../../usr/bin/iptctl ip6tables
